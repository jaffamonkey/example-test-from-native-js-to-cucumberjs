{
  "src_folders": [
    "tests/UI"
  ],
  "page_objects_path": [
    "tests/UI/page-objects/nightwatch"
  ],
  "webdriver": {
    "start_process": true
  },
  "test_settings": {
    "default": {
      "webdriver": {
        "server_path": "node_modules/.bin/chromedriver",
        "port": 9515,
        "cli_args": [
          "--log", "debug"
        ]
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": [
            "headless",
            "disable-gpu"
          ]
        },
        "acceptSslCerts": true
      }
    }
  }
}
