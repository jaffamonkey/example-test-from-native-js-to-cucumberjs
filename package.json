{
  "name": "starter-github-html-tests-travis-netlify",
  "description": "starter-github-html-tests-travis-netlify",
  "version": "1.0.0",
  "author": "jaffamonkey <paullittlebury@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "artillery": "latest",
    "assert": "^1.4.1",
    "body-parser": "latest",
    "chai": "latest",
    "chromedriver": "latest",
    "cucumber": "latest",
    "cucumber-pretty": "latest",
    "eslint": "latest",
    "express": "latest",
    "jasmine-json-test-reporter": "latest",
    "jest": "24.9.0",
    "jest-image-snapshot": "latest",
    "mocha": "latest",
    "nightmare": "latest",
    "nightwatch": "^1.0.19",
    "nightwatch-api": "latest",
    "pa11y": "latest",
    "protractor": "latest",
    "puppeteer": "latest",
    "request": "latest",
    "selenium-webdriver": "^3.5.0",
    "superagent": "latest",
    "wdio-selenium-standalone-service": "latest",
    "webdriverio": "latest",
    "zombie": "latest"
  },
  "scripts": {
    "startapi": "node ./api/api.js &",
    "startweb": "node ./web/server.js &",
    "wdupdate": "./node_modules/.bin/webdriver-manager update",
    "test:api": "node ./tests/API/api-test.js",
    "test:superagent": "node ./tests/API/api-test-superagent-assert.js",
    "test:nightmare": "./node_modules/.bin/mocha --recursive ./tests/UI/electron-nightmare-mocha.js",
    "test:jest": "./node_modules/.bin/jest ./tests/UI/jest-webdriver.js",
    "test:nightwatchapi": "node ./tests/UI/nightwatchapi-webdriver.js",
    "test:nightwatch": "./node_modules/.bin/nightwatch --test ./tests/UI/nightwatch-webdriver.js",
    "test:javascript": "node ./tests/UI/webdriver-javascript.js",
    "test:webdriverio": "node ./tests/UI/webdriverio-selenium.js",
    "test:webdriver": "node ./tests/UI/webdriver-node-async.js",
    "test:protractor": "./node_modules/.bin/protractor ./protractor.conf.js",
    "test:puppeteer": "node ./tests/UI/puppeteer.js",
    "test:mocha": "./node_modules/.bin/mocha ./puppeteer.conf.js --recursive ./tests/UI/mocha-puppeteer.js",
    "test:zombie": "./node_modules/.bin/mocha --recursive ./tests/UI/zombiejs.js",
    "test:cucumberjs": "./node_modules/.bin/cucumber-js -r ./tests/UI/bdd/**/*.js -f node_modules/cucumber-pretty ./tests/UI/*.feature",
    "test:pa11y": "node ./tests/performance/pa11y/pa11y.js > ./tests/reports/pa11y-report.json",
    "test:artillery": "./node_modules/.bin/artillery run ./tests/performance/artillery/artillery.yml > ./tests/reports/artillery-report.txt",
    "lint": "./node_modules/.bin/eslint ./tests/**/**/*.js"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/tests/UI/jest*.js"
    ]
  }
}
